<resources xmlns:tools="http://schemas.android.com/tools"><![CDATA[
    ]]><!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/black20</item>
        <item name="colorButtonNormal">@color/fullBlack</item>
        <item name="color">@color/fullBlack</item>
        <item name="android:textColorHint">@color/textGrey</item>
        <item name="imageButtonStyle">@color/textGrey</item>
        <item name="colorSurface">@color/colorSurface</item>
        <!-- Switch color. -->
        <item name="thumbColor">@color/thumbSwitchDay</item>
        <item name="trackColor">@color/trackSwitchDay</item>
        <item name="colorErrorContainer">#E6E8EB</item>
        <item name="colorOnTertiary">#000</item>

        <item name="tabIndicator">@drawable/tablayout_indicator</item>

    </style>



    <style name="Theme.MediaLibActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/fullBlack</item>
        <item name="android:textSize">@dimen/playerArtistNameText14</item>
        <item name="colorButtonNormal">@color/fullBlack</item>
        <item name="android:textColorHint">@color/fullBlack</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>

    </style>



</resources>
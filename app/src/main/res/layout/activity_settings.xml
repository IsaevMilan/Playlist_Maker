<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ExtraText"
    >

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/arrowBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:foregrund="?attr/selectableItemBackground"
            android:backgroundTint="?android:background"
            android:src="@drawable/arrow_back1"
            tools:targetApi="m"
            android:contentDescription="@string/todoo"
            app:tint="?colorButtonNormal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="14dp"
            android:text="@string/Setting"
            android:textAllCaps="false"
            android:textSize="@dimen/textSizePlaylist"
            android:textColor="?attr/colorButtonNormal"
            android:fontFamily="@font/ys_display_medium"/>
    </FrameLayout>


    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="2dp"
        android:minHeight="48dp"
        android:text="@string/blackth"
        android:textAllCaps="false"
        android:textSize="@dimen/settingTextSize"
        android:fontFamily="@font/ys_display_regular"
        tools:ignore="UseSwitchCompatOrMaterialXml" />


    <FrameLayout
        style="@style/SettingsFrameStyle">
        <TextView
            style="@style/SettingsTextStyle"
            android:text="@string/SHARE"
            />

        <ImageView
            style="@style/SettingsImageStyle"
            android:src="@drawable/shareic"
            android:contentDescription="@string/todo1" />
    </FrameLayout>

    <FrameLayout
        style="@style/SettingsFrameStyle">
        <TextView

            style="@style/SettingsTextStyle"
            android:text="@string/support"
            />

        <ImageView
            style="@style/SettingsImageStyle"
            android:src="@drawable/light_mode"
            android:contentDescription="@string/todo2" />
    </FrameLayout>

    <FrameLayout
        style="@style/SettingsFrameStyle">
        <TextView
            style="@style/SettingsTextStyle"
            android:text="@string/agreement"
            />

        <ImageView
            style="@style/SettingsImageStyle"
            android:src="@drawable/arrowforward"
            android:contentDescription="@string/todo3" />
    </FrameLayout>


</LinearLayout>

<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/fullBlack</item>
        <item name="colorButtonNormal">@color/white1</item>
        <item name="color">@color/white1</item>
        <item name="android:textColorHint">@color/blackText</item>
        <item name="imageButtonStyle">@color/white1</item>
        <!-- Switch color. -->
        <item name="thumbColor">@color/BackBlue</item>
        <item name="trackColor">@color/trackSwitchNight</item>
    </style>

    <style name="Theme.MainActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/fullBlack</item>
    </style>

    <style name="Theme.MediaLibActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/white1</item>
        <item name="android:textSize">@dimen/playerArtistNameText14</item>
        <item name="colorButtonNormal">@color/white1</item>
        <item name="android:textColorHint">@color/white1</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

</resources>